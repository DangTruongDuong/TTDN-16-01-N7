<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_chatbot_config_form" model="ir.ui.view">
            <field name="name">chatbot.config.form</field>
            <field name="model">chatbot.config</field>
            <field name="arch" type="xml">
                <form string="Cấu hình Chatbot">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="gemini_api_key" password="True" placeholder="Nhập API key từ Google Gemini"/>
                            <field name="active"/>
                        </group>
                        <div class="alert alert-info" role="alert">
                            <p><strong>Hướng dẫn lấy Gemini API Key:</strong></p>
                            <ol>
                                <li>Truy cập <a href="https://makersuite.google.com/app/apikey" target="_blank">Google AI Studio</a></li>
                                <li>Đăng nhập bằng tài khoản Google của bạn</li>
                                <li>Click "Create API Key" để tạo API key mới</li>
                                <li>Copy API key và dán vào trường trên</li>
                            </ol>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_chatbot_config_tree" model="ir.ui.view">
            <field name="name">chatbot.config.tree</field>
            <field name="model">chatbot.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_chatbot_config" model="ir.actions.act_window">
            <field name="name">Cấu hình Chatbot</field>
            <field name="res_model">chatbot.config</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem
            id="menu_chatbot_config"
            name="Cấu hình Chatbot"
            parent="menu_root_duan"
            sequence="8"
            action="action_chatbot_config"/>
    </data>
</odoo>

