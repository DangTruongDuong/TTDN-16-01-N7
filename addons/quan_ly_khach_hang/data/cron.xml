<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cron_send_birthday_emails" model="ir.cron">
        <field name="name">Gửi Email Chúc Mừng Sinh Nhật</field>
        <field name="model_id" ref="quan_ly_khach_hang.model_customer"/>
        <field name="state">code</field>
        <field name="code">model.send_birthday_emails()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>
    
    <record id="cron_send_contract_expiry_warnings" model="ir.cron">
        <field name="name">Cảnh Báo Hợp Đồng Sắp Hết Hạn</field>
        <field name="model_id" ref="quan_ly_khach_hang.model_contract"/>
        <field name="state">code</field>
        <field name="code">model.send_contract_expiry_warnings()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>